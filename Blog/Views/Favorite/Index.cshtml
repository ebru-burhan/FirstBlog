@model List<Post>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div class="row" style="margin-top:20px;">

    @if (Model.Count == 0)
    {
        <p>No Favorite</p>
    }
    else
    {
        foreach (Post post in Model)
        {

            <div class="col col-md-4" style="margin-bottom:20px">
                <div class="card">
                    <img src="@post.ImagesUrl" class="card-img-top" style="height:300px;object-fit: cover;" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">@post.Title</h5>
                        <p class="card-text">@post.Description</p>
                        @Html.ActionLink("Show More", "PostDetail", new { id = post.ID }, new { @class = "btn btn-xs btn-primary" })
                        @Html.ActionLink("Remove", "DeletePostFromFavorites", new { id = post.ID }, new { @class = "btn btn-xs btn-primary" })
                    </div>
                </div>
            </div>
        }
    }
</div>